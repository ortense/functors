{
  "compilerOptions": {
    "strict": true,
    "lib": ["ESNext", "DOM"],
    "target": "esnext",
    "module": "esnext",
    "rootDir": "./src",
    "declaration": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
  ]
}
